@*@model c_final_capstone_v2.Models.Cat*@
@model IEnumerable<c_final_capstone_v2.Models.Cat>

@{
    ViewBag.Title = "CatList";
}
<div class="jumbotron">

<h2>CatList</h2>
</div>


<p>
    @Html.ActionLink("Add Cat", "AddCat", "Home")
   @using (Html.BeginForm("CatList", "Home", FormMethod.Get))
   {
    <select name="sort">
        <option value="">Sort By...</option>
        <option value="NameAZ">Name A-Z</option>
        <option value="NameZA">Name Z-A</option>
        <option value="AgeYoungOld">Age: Yougest - Oldest</option>
        <option value="AgeOldYoung">Age: Oldest - Youngest</option>
        <option value="Color">Colors</option>
    </select>
    <input type="submit" value="Submit"/>
    }
</p>
<div class="container">
    <div class="row">
        <div class="col-sm-6">
            <table class="table">
                <tr>
                    <th>Image</th>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Age)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Colors)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.HairLength)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Skills)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.PriorExperience)
                    </th>
                    <th>
                        AdminOnly @*@Html.DisplayNameFor(model => model.PictureId)*@
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <img class="listImg" src="~/Images/@item.PictureId" />
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Age)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Colors)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.HairLength)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Skills)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PriorExperience)
                        </td>
                        @*<td>
                            @Html.DisplayFor(modelItem => item.PictureId)don't really need to dsiplay picid
                        </td>*@
                        <td>
                            @*TODO make these options available to administrators only*@
                            @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                            @Html.ActionLink("Details", "ViewCat", new { id = item.ID }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.ID })
                        </td>
                    </tr>
                }

            </table>
        </div>
    </div>
</div>
