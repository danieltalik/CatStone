@*@model c_final_capstone_v2.Models.Cat*@
@model IEnumerable<c_final_capstone_v2.Models.Cat>

@{
    ViewBag.Title = "Search";
}
<div class="jumbotron">

    <h2>Search</h2>
</div>


<p>

    @using (Html.BeginForm("Search", "Home", FormMethod.Get))
    {

        <b>Search Option:</b> @Html.RadioButton("option", "Name") <text>Name</text> @Html.RadioButton("option", "Color")<text>Colors</text>
        @Html.RadioButton("option", "Age")<text>Age</text> @Html.TextBox("search") <input type="submit" name="submit" value="Search" />
    }
</p>
<div class="container">
    <div class="row">
        <div class="col-sm-6">
            <table class="table">
                <tr>
                    <th>Image</th>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Age)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Colors)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.HairLength)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Skills)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.PriorExperience)
                    </th>
                    <th></th>
                </tr>
                @if (Model.Count() == 0)
                {
                    
                <tr><td><img class="listImg" src="~/Content/gif/dot.gif" />No Cats Found</td></tr>}
                else
                {

                    foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <a href="ViewCat/@item.ID"><img class="listImg" src="~/Images/@item.PictureId" /></a>
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Age)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Colors)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.HairLength)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Skills)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.PriorExperience)
                            </td>
                        </tr>
                    }
                }

            </table>
        </div>
    </div>
</div>
