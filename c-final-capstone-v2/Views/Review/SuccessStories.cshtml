@model IEnumerable<c_final_capstone_v2.Models.Review>
@using c_final_capstone_v2.Models
@{
    ViewBag.Title = "SuccessStories";
}
@{ Cat cat = new Cat();}
<h2>Cat Employment Success Stories</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CatID)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.SuccessStory)
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.cat.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SuccessStory)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                @Html.ActionLink("Details", "Details", new { id = item.ID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.ID })
            </td>
        </tr>
    }

</table>
