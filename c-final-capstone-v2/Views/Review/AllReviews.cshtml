@model IEnumerable<c_final_capstone_v2.Models.Review>

@{
    ViewBag.Title = "AllReviews";
    //Layout = "_Layout.cshtml";
}

<h2>AllReviews</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CatID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UserID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Rating)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SuccessStory)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ReviewComment)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsApproved)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CatID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rating)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SuccessStory)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReviewComment)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsApproved)
            </td>
            <td>
                @Html.ActionLink("Create New", "HereYeBeginTheReviewProcess", new { controller = "Review", id = item.CatID }) |
                @Html.ActionLink("Edit", "EditReview", new { controller = "Review", id = item.ID }) |
                @Html.ActionLink("Details", "ViewCat", new { controller = "Home", id = item.CatID }) 
            </td>
        </tr>
    }
    @*"Edit", "EditReview", "Review", new { id=item.ID }, null*@
</table>
